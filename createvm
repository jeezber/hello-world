  - name: Create VM 1
    hosts: localhost
    connection: local
    vars:
      vm_name: OASVM
      admin_username: azureuser
      admin_password: Formel1!
      resource_group: Operating-Automation-Showcase
tasks: 
   - name: Create public IP addresses for VM 1
       azure_rm_publicipaddress:
       resource_group: "{{ resource_group }}"
       allocation_method: Static
       name: "{{ vm_name }}_{{ item }}"
    loop:
      - 1
      
  - name: Create virtual network inteface cards for VM A
    azure_rm_networkinterface:
      resource_group: "{{ resource_group }}"
  - name: "{{ vm_name }}_{{ item }}"
      virtual_network: "{{ vm_name }}"
      subnet: "{{ vm_name }}"
      public_ip_name: "{{ vm_name }}_{{ item }}"
      security_group: "{{ vm_name }}"
    loop:
      - 1
      
  - name: Create VM A 
    azure_rm_virtualmachine:
      resource_group: "{{ resource_group }}"
      name: "{{ vm_name }}{{ item }}"
      vm_size: Standard_DS1_v2
      admin_username: "{{ admin_username }}"
      ssh_password_enabled: false
      ssh_public_keys:
        - path: /home/azureuser/.ssh/authorized_keys
          key_data: ssh-rsa  jonas_bernsee@cc-2a1d14e3-744bcc67c8-tdbhz
      network_interfaces: "{{ vm_name }}_{{ item }}"
      image:
        offer: UbuntuServer
        publisher: Canonical
        sku: 18.04-LTS
        version: latest
      apt:
        name: ansible
        state:present
    loop:
      - 1
